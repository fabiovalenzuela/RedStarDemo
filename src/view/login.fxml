<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="CENTER" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.LoginController">
    <rowConstraints>
        <RowConstraints />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" />
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="38.0" prefWidth="211.0" text="Welcome" textAlignment="CENTER" GridPane.columnSpan="3">
            <font>
                <Font size="32.0" />
            </font>
        </Label>
        <Label alignment="CENTER_RIGHT" contentDisplay="CENTER" prefHeight="17.0" prefWidth="101.0" text="User Name: " GridPane.rowIndex="1" />
        <Label alignment="CENTER_RIGHT" prefHeight="17.0" prefWidth="101.0" text="Password:" GridPane.rowIndex="2" />
        <TextField fx:id="userTF" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
        <PasswordField fx:id="passwordPF" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />
        <Button fx:id="loginBtn" defaultButton="true" mnemonicParsing="false" onAction="#login" text="Login" GridPane.rowIndex="3" />
        <Button fx:id="cancelBtn" cancelButton="true" mnemonicParsing="false" onAction="#cancel" text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <Button mnemonicParsing="false" onAction="#createUser" text="Create User" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField fx:id="errorMsg" alignment="CENTER" editable="false" GridPane.columnSpan="2147483647" GridPane.rowIndex="4">
            <font>
                <Font size="14.0" />
            </font>
        </TextField>
    </children>
</GridPane>
